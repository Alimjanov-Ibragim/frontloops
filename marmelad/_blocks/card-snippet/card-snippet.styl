.card-snippet
    display block

    &__img
        margin-bottom 40px
        img
            width 75px
    
    &__name
        margin-bottom 15px
        font-size 20px
        font-weight bold
        letter-spacing 3px
        text-transform uppercase
        color #3787da
    
    &__desc
        margin-bottom 8px
        font-size 14px
        color #85848a
    
    &__price
        font-size 34px
        font-weight bold
        color #3787da
        
        .cur
            margin-left 0px
            padding 10px 0 0
            display inline-block
            vertical-align top
            font-size 16px
        
        span
            font-size 12px
            color #3787da