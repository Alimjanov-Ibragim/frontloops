.chat-close
    position absolute
    top 18px
    right 18px
    width auto
    height auto
    font-weight normal
    cursor pointer
    
    &:hover
        .svg-icon
            fill #fff
            transition fill .3s
    &:focus,
    &:active
        outline none
        color #fff
        .svg-icon
            fill #323a48
            transition fill .3s
    
    .svg-icon
        display block
        width 24px
        height 24px
        fill #c3d4f1
        transition fill .3s