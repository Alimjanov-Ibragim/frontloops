.grid
    display flex
    flex-wrap wrap
    margin 0 -21px 0 -21px
    
    &__col
        margin-bottom 12px
        padding 0px
        text-align center

    .col-4
        flex 1 1 33.3%
        max-width 33.3%
    
    @media ( max-width 960px )
        .col-lg-6
            flex 1 1 50%
            max-width 50%
    
    @media ( max-width 768px )
        .col-md-12
            flex 1 1 100%
            max-width 100%