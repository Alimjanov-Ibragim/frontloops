.loop2Step10ItemInfo
    position relative
    margin 0 0 18px
    padding 0 110px 0 18px
    
    &:last-child
        margin-bottom 0
    
    &__line
        position absolute
        top 10px
        bottom -17px
        left 3px
        width 1px
        background $borderColor
        
        &:before,
        &:after
            content ''
            position absolute
            left -4px
            width 9px
            height 9px
            border 1px solid $borderColor
            border-radius 50%
        
        &:before
            top -9px
        
        &:after
            bottom -9px
    
    &__img
        position absolute
        top 0
        right 0
        width 100px
        height 30px
        
        img
            max-width 100%
    
    &__title
        margin 0 0 8px
        font-size 12px
        line-height 12px
        color #c0b8b2
        text-transform uppercase
    
    &__subtitle
        margin 0 0 3px
        font-size 15px
        line-height 15px
        font-weight 300
        color #000
    
    &__invent
        font-size 15px
        font-weight 300
        line-height 15px
        color #8faeed
        text-decoration none
        
        &:hover,
        &:active
            text-decoration underline

        &:focus
            color #325eb7
            text-decoration underline