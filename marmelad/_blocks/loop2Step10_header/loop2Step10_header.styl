.loop2Step10_header
    
    &__section
        position relative
        display flex
        justify-content space-between
        align-items center
        max-width 1000px
        width 100%
        margin 0 auto    
        font-size 0
        
    &__line
        position relative
        top 0
        bottom 0
        right 0
        height 100%
        min-height 76px
        border-right 1px solid $borderColor
    
    &__top,
    &__bot
        border-bottom 1px solid $borderColor
        
@media ( max-width 1140px )
    .loop2Step10_header__section
        padding 0 20px