.loop2Step1SliderNav
    position absolute
    top 0
    left -100px
    right -100px
    z-index -1
    height 100px
    
    &__prev,
    &__next
        cursor pointer
        background #ebb9b8
        
        &:hover,
        &:active
            background #f1a4a2
            
        &:focus
            background #fb908e
        
    &__prev
        position absolute
        top 0
        left 0
        width 100px
        height 100px
        margin 0
        padding 0
        border none
        outline none

        .loop2Step1SliderNav__span
            display block
            width 0
            height 0
            margin 0 auto
            padding-right 6px
            border-style solid
            border-width 7px 8px 7px 0
            border-color transparent #855352 transparent transparent
    
    &__next
        position absolute
        top 0
        right 0
        width 100px
        height 100px
        margin 0
        padding 0
        border none
        outline none
        
        .loop2Step1SliderNav__span
            display block
            width 0
            height 0
            margin 0 auto
            padding-left 6px
            border-style solid
            border-width 7px 0 7px 8px
            border-color transparent transparent transparent #855352
        