.loop2Step2Close
    position absolute
    top 50%
    right 103px
    width 50px
    height 50px
    margin -25px 0 0
    padding 0
    outline none
    border none
    background none
    cursor pointer
    user-select none

    span
        display inline-block
        vertical-align initial
        font-size 34px
        line-height 34px
        color #7e762a
        
    &:active,
    &:hover
        color #5a541a
    
    &:focus
        border 1px dashed #5a541a
    
@media ( max-width 640px )
    .loop2Step2Close
        right 0