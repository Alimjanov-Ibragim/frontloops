.loop2Step3Navigation
    background #5f5280

    ul
        position relative
        padding 27px 0 13px 22px
        
        &:before
            content ''
            position absolute
            top 0
            bottom 0
            left 31px
            width 2px
            background #afa9c0

        li
            margin 0 0 14px
            a
                position relative
                z-index 5
                display block
                padding 0 0 0 32px
                font-size 15px
                font-weight bold
                color #afa9c0
                text-decoration none
                outline none
                
                &:hover,
                &:active
                    color #fff
                
                &:focus
                    color #fff
                    text-decoration underline
                
                .before
                    position absolute
                    top 50%
                    left 0
                    width 20px
                    height 20px
                    margin -10px 0 0
                    border-radius 50%
                    background #5f5280
                    
                    &:before
                        content ''
                        position absolute
                        top 50%
                        left 50%
                        width 8px
                        height 8px
                        border-radius 50%
                        transform translate(-50%,-50%)
                        background #fff