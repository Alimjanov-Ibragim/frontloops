.loop2Step3Title
    position relative
    display flex
    padding 40px 40px 19px 20px
    background linear-gradient( to bottom,hsla(#af7cd5),cubic-bezier(0, 0, 1, 1),hsla(#a87ad2) )
    
    &__text
        font-size 14px
        font-weight 500
        color #fff
    
    &__img
        position relative
        z-index 1
        width 25px
        height 25px
        margin 0 10px 0 0
        border-radius 50%
        background #fff
        
        &:before
            content ''
            position absolute
            top -40px
            left 11px
            z-index -1
            width 2px
            height 50px
            background #fff
        
        img
            position absolute
            top 50%
            left 50%
            width 13px
            height 13px
            transform translate(-50%, -58%)

.loop2Step3Title--foot
    padding 20px 40px 20px 20px
    
    .loop2Step3Title__img
        &:before
            content ''
            position absolute
            top -20px
            left 11px
            z-index -1
            width 2px
            height 70px
            background #fff