.loop2Step7Article
    padding 40px 40px 39px
    background-color #fff
    
    &__title
        position relative
        margin 0 0 30px
        font-size 32px
        font-weight 500
        line-height 32px
        letter-spacing -1px
        color #000
    
    &__items
        height 360px
        overflow-x inherit
        overflow-y auto
        
        &::-webkit-scrollbar
            background-color #fff
            width 16px
        
        &::-webkit-scrollbar-thumb
            background-color #babac1
            border-radius 16px
            border 4px solid #fff

@media ( max-width 500px )
    .loop2Step7Article
        padding 30px 20px 29px