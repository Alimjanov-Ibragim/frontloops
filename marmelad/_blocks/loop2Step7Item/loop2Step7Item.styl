.loop2Step7Item
    display flex
    align-items center
    margin 0 0 40px
    
    &:last-child
        margin-bottom 0
    
    &__img
        position relative
        margin 0 20px 0 0
        width 45px
        height 40px
        
        img
            position absolute
            top 50%
            left 50%
            width 40px
            height 40px
            transform translate(-50%,-50%)
            max-width 100%
    
    &__title
        flex 1
        font-size 15px
        line-height 15px
        color #000

.loop2Step7Item__img.br50 img
    border-radius 50%
    
@media ( max-width 500px )
    .loop2Step7Item__img
        margin 0 10px 0 0

@media ( max-width 425px )
    .loop2Step7Item
        flex-direction column
        align-items flex-start
        margin 0 0 20px
    
    .loop2Step7Item__img,
    .loop2Step7Item__title
        margin 0 10px 10px 0