.loop2Step8Mobile
    position relative
    z-index 1
    overflow hidden
    max-width 420px
    margin 0 auto
    padding 40px 0px 33px
    background #f7f7f7
    border-radius 52px
    border 15px solid #000
    
    &:before
        content ''
        position absolute
        top -100px
        left 0
        z-index -1
        width 420px
        height 280px
        background #5288f4
        transform skewY(30deg)
    
    &__mono
        position absolute
        top 0
        left 50%
        width 62%
        max-width 240px
        height 30px
        z-index 0
        border-radius 0 0 8px 8px
        color #000
        background currentColor
        transform translateX(-50%)
        
        &:before,
        &:after,
        .mono-circle:before,
        .mono-circle:after
            content ''
            position absolute
            top 0
            width 8px
            height 8px
            background currentColor
            
        &:before,
        .mono-circle:before
            left -8px
        
        &:after,
        .mono-circle:after
            right -8px
        
        .mono-circle
            &:before,
            &:after
                top 0px
                z-index 5
                background #5288f4
        
            &:before
                border-radius 0 5px 0 0
            
            &:after
                border-radius 5px 0 0 0            

    &__title
        margin 0 0 13px
        font-size 22px
        font-weight bold
        color #fff
        text-align center
        text-transform uppercase

    &__img
        margin 0 0 42px
        padding 0 20px
        
        img
            max-width 100%
    
    &__items
        padding 0 20px