.loop2Step9Distance
    position relative
    z-index 1
    flex 1
    max-width 220px
    width 100%
    height 2px
    margin-top 2px
    background #bbcdf2
    
    &:before,
    &:after
        content ''
        position absolute
        top -3px
        width 8px
        height 8px
        background #fff
        border-radius 50%
        cursor pointer
    
    &:before
        left -3px
    
    &:after
        right -3px
    
    &__line
        content ''
        position absolute
        top 0
        left 0
        max-width 220px
        width 30%
        height 2px
        background #fff
    
    &__car
        position absolute
        top -24px
        right -10px
        width 20px
        height 20px

@media ( max-width 480px )
    .loop2Step9Distance
        order -1
        flex 0 0 100%
        max-width 100%
        margin 0 0 10px