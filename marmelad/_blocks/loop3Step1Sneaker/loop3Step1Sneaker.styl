.loop3Step1Sneaker
    position absolute
    top 152px
    left -108px
    width 480px
    user-select none
    
    &__img
        
        img
            max-width 100%
    
    &__plus
        z-index 5
        width 30px
        height 30px
        background #5429f2
        border none
        border-radius 50%
        outline none
        cursor pointer
        user-select none
        
        &:hover,
        &:active
            background #886ee8
        
        &:focus
            background #2b1382
            
        &:before
            content ''
            position absolute
            top 50%
            left 50%
            z-index 1
            width 2px
            height 10px
            background #fff
            transform translate(-50%,-50%)
        
        &:after
            content ''
            position absolute
            top 50%
            left 50%
            z-index 1
            width 10px
            height 2px
            background #fff
            transform translate(-50%,-50%)

    &__plus--first
        position absolute
        top 68px
        left 125px
    
    &__plus--second
        position absolute
        top 226px
        left 211px

    &__plus--third
        position absolute
        bottom 148px
        right 70px