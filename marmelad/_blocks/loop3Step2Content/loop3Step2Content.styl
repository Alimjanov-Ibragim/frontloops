.loop3Step2Content
    display flex
    flex-wrap wrap
    margin-left -20px
    
    &__item
        position relative
        flex 0 0 30%
        max-width 30%
        min-height 200px
        margin 0 0 20px 20px
        overflow hidden
        
        &:hover,
        &:active
            box-shadow 0 5px 12px -1px #648cf7
            .loop3Step2ContentItems
                background rgba(#000,0.3)
                opacity 1
                transition background 0.3s

.loop3Step2Content__item--second
    flex 0 0 63.8%
    max-width 63.8%

@media ( max-width 850px )
    .loop3Step2Content__item--second,
    .loop3Step2Content__item
        flex 0 0 100%
        max-width 100%
