.loop3Step2Gallery
    display flex
    max-width 800px
    margin 0 auto
    border-radius 5px
    background #fff
    
    &__settings
        display flex
        flex-direction column
        justify-content space-between
        flex 0 0 90px
        padding 30px 0 34px 30px
    
    &__content
        flex 1
        padding 30px 40px 10px

@media ( max-width 480px )
    .loop3Step2Gallery
        flex-direction column
    
    .loop3Step2Gallery__settings
        flex-wrap wrap
        flex-direction row
        flex 1
        padding 30px 30px 0