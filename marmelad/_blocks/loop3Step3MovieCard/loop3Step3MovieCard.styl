.loop3Step3MovieCard
    position relative
    max-width 226px
    width 100%
    margin 0 auto
    outline none
    
    &:hover,
    &:active,
    &:focus
        .loop3Step3MovieCard__content
            transform scale(1,1)
            transform-origin center top 
            transition transform 0.3s
    
    
    &__img
        position relative
        z-index 10
        
        img
            max-width 100%
            min-height 348px
            
    &__content
        position absolute
        // top 100%
        top 20px
        left -20px
        right -20px
        z-index 5
        display flex
        flex-direction column
        justify-content flex-end
        min-height 100%
        padding-top 155%
        border-radius 5px
        background #fff
        transform scale(.4,.1)

@media ( max-width 590px )
    .loop3Step3MovieCard__content
        position relative
        padding-top 0
        left 0
        right 0
        transform none