.loop3Step5Statistic
    max-width 440px
    width 100%
    margin 0 auto
    border-radius 4px
    background #424d84
    box-shadow 0 4px 11px -2px rgba(66,77,132,0.6)
    overflow hidden
    
    &__top
        display flex
        justify-content space-between
        margin 20px -8px 24px
        // margin 0 0px 44px
        height 167px
        overflow-x auto
        overflow-y hidden
        
        &::-webkit-scrollbar {
            background-color:#fff;
            width:16px
        }

        /* background of the scrollbar except button or resizer */
        &::-webkit-scrollbar-track {
            background-color:#fff
        }

        /* scrollbar itself */
        &::-webkit-scrollbar-thumb {
            background-color:#babac0;
            border-radius:16px;
            border:4px solid #fff
        }

        /* set button(top and bottom of the scrollbar) */
        &::-webkit-scrollbar-button {display:none}
    
    &__bot
        display flex
        padding 0 11px 7px

@media ( max-width 375px )
    .loop3Step5Statistic__bot
        flex-direction column