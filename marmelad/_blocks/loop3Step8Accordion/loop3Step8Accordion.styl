.loop3Step8Accordion
    position relative
    display flex
    
    &__item
        margin-bottom 21px
    
    &__title
        position relative
        margin-right 25px
        padding-bottom 11px
        font-size 15px
        font-weight bold
        line-height 15px
        color #a9abb9
        text-transform uppercase

        &:before
            content ''
            position absolute
            bottom 0
            left 0
            opacity 0
            width 30px
            border-bottom 3px solid #f08ba7
            trasition opacity 0.3s

        &:last-child
            margin-right 0
    
    &__body
        position absolute
        top 47px
        left 0
        right 0
        width 100%
        max-width 100%
        opacity 0
        font-size 25px
        font-weight bold
        line-height 25px
        color #b1b2ba
        text-transform capitalize
    
    &__item.isOpened 
        .loop3Step8Accordion__body
            opacity 1
        
        .loop3Step8Accordion__title
            color #fff
            
            &:before
                opacity 1