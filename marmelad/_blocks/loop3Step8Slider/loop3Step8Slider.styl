.loop3Step8Slider
    position relative
    margin-bottom 31px
    padding-bottom 92px
    border-bottom 1px solid #ebebeb

    &__item
        display flex
        justify-content space-between
    
    &__info
        position relative
        z-index 2
        max-width 400px
        width 100%
        padding 20px 20px 0
        background #4a4e67

        &:before
            content ''
            position absolute
            bottom 0
            right 0
            left 0
            height 100px
            background: linear-gradient(to bottom, rgba(74,78,103,0.3) 11%,rgba(#4e526d,1) 53%, #525773 70%);

    &__picture
        position relative
        max-width 300px
        width 100%
        height 200px

        &:before
            content ''
            position absolute
            bottom 0
            left 0
            right 0
            height 50px
            z-index 5
            box-shadow inset 0px -80px 10px -41px rgba(#000,0.5), 0px 29px 15px -9px rgba(0,0,0,0.5)

    &__img
        max-width 100%
        
    &__title
        margin-bottom 8px
        font-size 25px
        font-weight bold
        line-height 25px
        color #fff
    
    &__subtitle
        margin-bottom 13px
        font-size 15px
        font-weight bold
        line-height 15px
        color #76819a
    
    &__text
        margin-bottom 10px
        font-size 13px
        line-height 1.8
        color #fff
    
    .owl-nav
        position absolute
        left 0
        right 0
        bottom 75px
        z-index 5
        
        .owl-prev,
        .owl-next
            content ''
            position absolute
            top 0
            outline none
            border 1px dashed transparent !important
            
            &:focus
                border-color #f08ba7 !important
            
            span
                display block
                width 30px
                font-size 30px
                color #f08ba7
        
        .owl-prev
            left 0px
        
        .owl-next
            right 0px
    
    .owl-dots
        position absolute
        left 0
        right 0
        bottom 40px
        display flex
        justify-content center
        
        .owl-dot
            margin 0 6px
            outline none
            
        .owl-dot.active span,
        .owl-dot span
            display block
            border-radius 50%

        .owl-dot span
            width 4px
            height 4px
            background #ebebeb
        
        .owl-dot.active span
            width 8px
            height 8px
            background #f08ba7