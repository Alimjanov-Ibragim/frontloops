.payment-button
    margin 0
    padding 17px 10px 13px
    width 100%
    outline none
    border none
    border-radius 0 0 3px 3px
    cursor pointer
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background #6868ef
    transition background,marginTop 0.3s
    
    &:hover
        background #3939c1
        transition background 0.3s
    
    &:active
        margin-top 2px
        height 47px
        transition marginTop 0.4s

    &:focus
        background #3d3dad

    &__text
        position relative
        padding-right 20px
        font-size 12px
        color #fff
        font-weight bold
        text-transform uppercase
        text-align center
        
        &:before
            content ''
            position absolute
            top 0
            right 0
            width 13px
            height 13px
            background url('../img/arrow.svg') 0 50% no-repeat
            background-size 13px