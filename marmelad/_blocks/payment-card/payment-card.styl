.payment
    position relative
    display block
    width 100%
    margin 0
    padding 16px 40px 14px 29px
    border none
    border-top 1px solid rgba(0,0,0,.1)
    outline none
    text-align left
    background none
    cursor pointer
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    &:hover
        background rgba(78, 74, 74, 0.1)
        
        .payment__name
            color #000
    &:focus
        background rgba(0,0,0,.2)
        
        .payment__name
            color #000
    
    &:active
        background rgba(90, 85, 85, 0.1)
        
        .payment__name
            color #000
            
        
    
    input:checked ~ .payment__arrow
        opacity 1
        transition opacity .3s
    
    &__input
        position absolute
        opacity 0
        width 0
        height 0
        cursor pointer
    
    &__arrow
        position absolute
        top 15px
        right 19px
        width 18px
        height 18px
        opacity 0
        transition opacity .3s
        background url('../img/check.svg') 0 0 no-repeat

    &__img
        display inline-block
        vertical-align top
        margin-right 24px
        
        img
            width 40px
    
    &__name
        display inline-block
        vertical-align top
        font-size 14px
        font-weight bold
        color #afafaf
        text-transform uppercase