.product-options 
    margin 0
    padding 0
    list-style none
    
    &__li > *
        display inline-block
        vertical-align top
    
    &__li
        display flex
        justify-content space-between
        margin-bottom 28px
        line-height 1

    &__title
        max-width 400px
        font-size 15px
        color #2f2e2e
        letter-spacing 0.3px

    &__sum
        max-width 50px
        font-size 20px
        font-weight bold
        color #000
        
    &__title.total
        font-size 20px
        color #2f2e2e
        text-transform uppercase