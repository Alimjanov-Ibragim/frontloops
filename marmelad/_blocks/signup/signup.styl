.signup
    display flex
    margin-bottom 20px
    padding 14px 20px 17px
    text-decoration none
    outline none
    border 1px solid #ebebeb
    border-radius 3px
    transition box-shadow .3s
    
    &:hover
        border 1px solid transparent
        box-shadow 0px 6px 16px 1px rgba(0,0,0,0.1)
        transition box-shadow .3s
        
        .signup__text
            color #000
    &:focus,
    &:active
        box-shadow 0px 6px 16px 1px rgba(0,0,0,0.3)
    
    &__img
        flex 0 0 20px
        max-width 20px
        margin-right 20px
        img
            max-width 100%
        
    &__text
        display flex
        justify-content center
        flex 1 1 100%
        padding 8px 43px 0 0
        font-size 11px
        font-weight bold
        color #8b8b90
        text-transform uppercase