.tour-name
    margin 0 0 38px
    padding 0 30px 0 98px

    &__title
        position relative
        margin 0 0 27px
        padding 0 170px 0 0
        font-family 'PT Serif'
        font-size 60px
        color #000
        line-height 65px

        &:before
            content ''
            position absolute
            top 50%
            right 71px
            margin-top 36px
            width 100px
            height 4px
            background #000
    
    &__author
        font-family 'PT Serif'
        font-size 18px
        color #000

@media ( max-width 980px )
    .tour-name
        padding 0 30px

@media ( max-width 600px )
    .tour-name__title
        padding-right 110px
        
    .tour-name__title:before
        right 0
        
@media ( max-width 480px )
    .tour-name__title
        margin-bottom 15px
        font-size 40px
        line-height 45px
    
    .tour-name__title:before
        margin-top 0

@media ( max-width 425px )
    .tour-name__title
        padding-right 0
        
    .tour-name__title:before
        display none