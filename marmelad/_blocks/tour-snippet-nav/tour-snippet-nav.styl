.tour-snippet-nav
    margin-bottom 120px
    
    &__list
        display flex
        justify-content flex-end
        padding 26px 30px 0 0
        
        li
            margin-left 33px
            a
                font-size 11px
                font-weight bold
                color #9a9a9a
                outline none
                text-transform uppercase
                text-decoration none
                transition color .3s
                
                &:hover,
                &:active,
                &:focus
                    color #000
                    transition color .3s
        
        li.active a
            color #000

@media ( max-width 760px )
    .tour-snippet-nav
        margin-bottom 20px
        padding-bottom 30px
        background-color #8abefa

@media ( max-width 425px )
    .tour-snippet-nav__list
        justify-content center
        padding 35px 20px 0 10px
    
    .tour-snippet-nav__list li
        margin-left 10px